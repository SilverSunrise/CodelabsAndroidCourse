<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_toast"
        android:layout_width="@dimen/btnToast_mainActivity_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnToast_mainActivity_paddingLeft"
        android:layout_marginLeft="@dimen/btnToast_mainActivity_paddingLeft"
        android:layout_marginTop="@dimen/btnToast_mainActivity_paddingTop"
        android:layout_marginEnd="@dimen/btnToast_mainActivity_paddingRight"
        android:layout_marginRight="@dimen/btnToast_mainActivity_paddingRight"
        android:background="@color/btnToast_mainActivity_backColor"
        android:onClick="showToast"
        android:text="@string/button_hello"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="match_parent"
        android:layout_height="@dimen/textViewShowCount_mainActivity_height"
        android:layout_below="@+id/button_toast"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="@dimen/textViewShowCount_paddingLeft"
        android:layout_marginLeft="@dimen/textViewShowCount_paddingLeft"
        android:layout_marginTop="@dimen/textViewShowCount_paddingTop"
        android:layout_marginEnd="@dimen/textViewShowCount_paddingRight"
        android:layout_marginRight="@dimen/textViewShowCount_paddingRight"
        android:layout_marginBottom="@dimen/textViewShowCount_paddingBottom"
        android:background="@color/textViewShowCount_backColor"
        android:gravity="center_vertical"
        android:text="@string/showCount"
        android:textAlignment="center"
        android:textColor="@color/textViewShowCount_textColor"
        android:textSize="@dimen/textViewShowCount_textSize"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/button_count"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toast" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="@dimen/btnCount_mainActivity_width"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnCount_mainActivity_paddingLeft"
        android:layout_marginLeft="@dimen/btnCount_mainActivity_paddingLeft"
        android:layout_marginEnd="@dimen/btnCount_mainActivity_paddingRight"
        android:layout_marginRight="@dimen/btnCount_mainActivity_paddingRight"
        android:layout_marginBottom="@dimen/btnCount_mainActivity_paddingBottom"
        android:background="@color/btnCount_mainActivity_backColor"
        android:onClick="countUp"
        android:text="@string/button_count"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>