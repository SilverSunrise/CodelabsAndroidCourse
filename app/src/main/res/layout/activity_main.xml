<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_toast"
        android:onClick="showToast"
        android:text="@string/button_toast"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/buttonToast_mainActivity" />

    <Button
        android:id="@+id/button_zero"
        android:onClick="showZero"
        android:text="@string/button_zero"
        app:layout_constraintBottom_toTopOf="@+id/button_count"
        app:layout_constraintEnd_toStartOf="@+id/show_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toast"
        style="@style/buttonZero_mainActivity" />

    <Button
        android:id="@+id/button_count"
        android:onClick="countUp"
        android:text="@string/button_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_zero"
        style="@style/buttonCount_mainActivity" />

    <TextView
        android:id="@+id/show_count"
        android:text="@string/showCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toEndOf="@+id/button_zero"
        app:layout_constraintTop_toTopOf="@+id/button_toast"
        app:layout_constraintVertical_bias="1.0"
        style="@style/textView_showCount_mainActivity" />


</androidx.constraintlayout.widget.ConstraintLayout>