<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/button_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnToast_mainActivity_paddingLeft"
        android:layout_marginLeft="@dimen/btnToast_mainActivity_paddingLeft"
        android:layout_marginTop="@dimen/btnToast_mainActivity_paddingTop"
        android:background="@color/btnToast_mainActivity_backColor"
        android:onClick="showToast"
        android:text="@string/button_toast"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/btnCount_mainActivity_paddingLeft"
        android:layout_marginLeft="@dimen/btnCount_mainActivity_paddingLeft"
        android:layout_marginTop="@dimen/btnCount_mainActivity_paddingTop"
        android:background="#2C27C5"
        android:onClick="countUp"
        android:text="@string/button_count"
        android:textColor="@android:color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_toast" />

    <TextView
        android:id="@+id/show_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_toast"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="false"
        android:layout_marginStart="@dimen/textViewShowCount_mainActivity_paddingLeft"
        android:layout_marginLeft="@dimen/textViewShowCount_mainActivity_paddingLeft"
        android:layout_marginTop="@dimen/textViewShowCount_mainActivity_paddingTop"
        android:background="@color/textViewShowCount_mainActivity_backColor"
        android:gravity="center_vertical"
        android:text="@string/showCount"
        android:textAlignment="center"
        android:textColor="@color/textViewShowCount_mainActivity_textColor"
        android:textSize="@dimen/textViewShowCount_mainActivity_textSize"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/button_toast"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>