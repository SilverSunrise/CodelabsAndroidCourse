<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/website_editText"
        android:text="@string/editText_mainActivity_url"
        tools:ignore="Autofill,LabelFor"
        style="@style/editText_mainActivity" />

    <Button
        android:id="@+id/open_website_button"
        android:onClick="openWebsite"
        android:text="@string/buttonOpen_mainActivity_url"
        style="@style/buttons_mainActivity" />

    <EditText
        android:id="@+id/location_editText"
        style="@style/editText_mainActivity"
        android:text="@string/editText_mainActivity_loc"
        tools:ignore="Autofill,LabelFor" />

    <Button
        android:id="@+id/open_location_button"
        style="@style/buttons_mainActivity"
        android:onClick="openLocation"
        android:text="@string/buttonOpen_mainActivity_loc" />

    <EditText
        android:id="@+id/share_editText"
        style="@style/editText_mainActivity"
        android:text="@string/editText_mainActivity_share"
        tools:ignore="Autofill,LabelFor" />

    <Button
        android:id="@+id/share_text_button"
        style="@style/buttons_mainActivity"
        android:onClick="shareText"
        android:text="@string/buttonOpen_mainActivity_share" />

    <Button
        android:id="@+id/takePhoto"
        style="@style/buttons_mainActivity.takePhoto"
        android:onClick="openPhoto"
        android:text="@string/buttonPicture_mainActivity_takePicture" />


</LinearLayout>