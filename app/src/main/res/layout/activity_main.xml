<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnTextOne"
        style="@style/buttons_mainActivity"
        android:onClick="launchSecondActivity_TextOne"
        android:text="@string/btnTextOne_mainActivity"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnTextThree"
        app:layout_constraintEnd_toStartOf="@+id/btnTextThree"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnTextTwo"
        android:text="@string/btnTextTwo_mainActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="launchSecondActivity_TextTwo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/buttons_mainActivity"
        app:layout_constraintVertical_bias="0.272" />

    <Button
        android:id="@+id/btnTextThree"
        style="@style/buttons_mainActivity.buttonThree"
        android:text="@string/btnTextThree_mainActivity"
        app:layout_constraintEnd_toEndOf="parent"
        android:onClick="launchSecondActivity_TextThree"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnTextOne"
        app:layout_constraintTop_toBottomOf="@+id/btnTextTwo" />
</androidx.constraintlayout.widget.ConstraintLayout>