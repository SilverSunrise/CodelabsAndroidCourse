<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonToast_mainActivity">
        <item name="android:layout_width">@dimen/btnToast_mainActivity_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btnToast_mainActivity_paddingLeft</item>
        <item name="android:layout_marginLeft">@dimen/btnToast_mainActivity_paddingLeft</item>
        <item name="android:layout_marginTop">@dimen/btnToast_mainActivity_paddingTop</item>
        <item name="android:layout_marginEnd">@dimen/btnToast_mainActivity_paddingRight</item>
        <item name="android:layout_marginRight">@dimen/btnToast_mainActivity_paddingRight</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textView_ShowCount_mainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textViewShowCount_mainActivity_height</item>
        <item name="android:layout_below">@+id/button_toast</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_marginStart">@dimen/textViewShowCount_mainActivity_paddingLeft
        </item>
        <item name="android:layout_marginLeft">@dimen/textViewShowCount_mainActivity_paddingLeft
        </item>
        <item name="android:layout_marginTop">@dimen/textViewShowCount_mainActivity_paddingTop
        </item>
        <item name="android:layout_marginEnd">@dimen/textViewShowCount_mainActivity_paddingRight
        </item>
        <item name="android:layout_marginRight">@dimen/textViewShowCount_mainActivity_paddingRight
        </item>
        <item name="android:layout_marginBottom">
            @dimen/textViewShowCount_mainActivity_paddingBottom
        </item>
        <item name="android:background">@color/textViewShowCount_mainActivity_backColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/textViewShowCount_mainActivity_textSize</item>
        <item name="android:textStyle">bold</item>
