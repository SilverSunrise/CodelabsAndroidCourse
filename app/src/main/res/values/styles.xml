<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="buttonToast_mainActivity">
        <item name="android:layout_width">@dimen/btnToast_mainActivity_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btnToast_mainActivity_paddingLeft</item>
        <item name="android:layout_marginLeft">@dimen/btnToast_mainActivity_paddingLeft</item>
        <item name="android:layout_marginTop">@dimen/btnToast_mainActivity_paddingTop</item>
        <item name="android:layout_marginEnd">@dimen/btnToast_mainActivity_paddingRight</item>
        <item name="android:layout_marginRight">@dimen/btnToast_mainActivity_paddingRight</item>
        <item name="android:background">@color/btnToast_mainActivity_backColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="showCount_mainActivity">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/textViewShowCount_mainActivity_height</item>
        <item name="android:layout_below">@+id/button_toast</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerHorizontal">false</item>
        <item name="android:layout_marginStart">@dimen/textViewShowCount_paddingLeft</item>
        <item name="android:layout_marginLeft">@dimen/textViewShowCount_paddingLeft</item>
        <item name="android:layout_marginTop">@dimen/textViewShowCount_paddingTop</item>
        <item name="android:layout_marginEnd">@dimen/textViewShowCount_paddingRight</item>
        <item name="android:layout_marginRight">@dimen/textViewShowCount_paddingRight</item>
        <item name="android:layout_marginBottom">@dimen/textViewShowCount_paddingBottom</item>
        <item name="android:background">@color/textViewShowCount_backColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/textViewShowCount_textColor</item>
        <item name="android:textSize">@dimen/textViewShowCount_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="buttonCount_mainActivity">
        <item name="android:layout_width">@dimen/btnCount_mainActivity_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btnCount_mainActivity_paddingLeft</item>
        <item name="android:layout_marginLeft">@dimen/btnCount_mainActivity_paddingLeft</item>
        <item name="android:layout_marginEnd">@dimen/btnCount_mainActivity_paddingRight</item>
        <item name="android:layout_marginRight">@dimen/btnCount_mainActivity_paddingRight</item>
        <item name="android:layout_marginBottom">@dimen/btnCount_mainActivity_paddingBottom</item>
        <item name="android:background">@color/btnCount_mainActivity_backColor</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="textViewHello_secondActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textViewHello_secondActivity_textSize</item>
    </style>

    <style name="textViewShowCountSecond_secondActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textViewShowCountSecond_secondActivity_textSize</item>
    </style>

</resources>
