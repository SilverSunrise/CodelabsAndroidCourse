<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tv_recipeItem_recipeTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tvRecipeTitle_recipeItem_textSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_recipeItem_recipeDescription">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/tvRecipeDescription_recipeItem_textSize</item>
    </style>

    <style name="tv_recipeInfo_recipeIngredients">
        <item name="android:layout_marginTop">@dimen/tvMarginTop_recipeActivity_ingredients</item>
        <item name="android:textSize">@dimen/tvTextSize_recipeActivity_ingredients</item>
        <item name="android:lineSpacingExtra">@dimen/tvLineSpacing_recipeActivity_ingredients</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
