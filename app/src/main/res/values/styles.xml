<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="checkBox_mainActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/cb_mainActivity_marginStart</item>
        <item name="android:layout_marginTop">@dimen/cb_mainActivity_marginTop</item>
        <item name="android:textSize">@dimen/cb_mainActivity_textSize</item>
    </style>

    <style name="btnShow_mainActivity">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/btn_mainActivity_marginStart</item>
        <item name="android:layout_marginTop">@dimen/btn_mainActivity_marginTop</item>
    </style>

</resources>
